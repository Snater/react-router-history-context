{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationDir": "types",
		"inlineSources": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es5"
	},
	"include": [
		"src"
	]
}